<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_in_youtube_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:subtitleTextColor="#FFFFFF"
        android:titleTextColor="#FFFFFF" />



        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Picture"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:gravity="left"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textSize="16dp"/>

            <FrameLayout
                android:paddingTop="20dp"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_camera"
                    android:id="@+id/profile_picture_in_register"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/cancel_image_in_register"
                        android:src="@drawable/ic_close"/>

                </RelativeLayout>


            </FrameLayout>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Id"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:gravity="left"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textSize="16dp"/>

            <EditText
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/register_id"
                android:textSize="20dp"/>


            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:gravity="left"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:text="Password"
                android:textSize="16dp"/>

            <EditText
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/register_password"
                android:textSize="20dp"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:gravity="left"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:text="Name"
                android:textSize="16dp"/>

            <EditText
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/register_name"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:text="Gender"
                    android:textSize="16dp"/>

                <CheckBox
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:id="@+id/checkbox_for_man"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="남자"
                    android:fontFamily="monospace"
                    android:textStyle="bold"/>

                <CheckBox
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:checked="false"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkbox_for_woman"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="여자"
                    android:fontFamily="monospace"
                    android:textStyle="bold"/>



            </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:singleLine="true"
                android:text="Interests(3가지 관심사를 선택해주세요)"
                android:textSize="16dp"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/recycler_view_in_register">
            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="SignUp"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:id="@+id/sign_up_button"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"

                    android:background="@drawable/gray_border_for_login"/>

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:id="@+id/cancel_button"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/gray_border_for_login"/>

            </LinearLayout>
        </LinearLayout>

</LinearLayout>